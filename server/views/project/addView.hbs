{{!-- <h1>Creando el proyecto</h1> --}}
<div class="row">
    <div class="col s12 m10 offset-m1 18 offset-12">
        <div class="card">
            <div class="card-image">
                <img src="/images/addProject.jpg" alt="">
                <span class="card-title add-project" style="font-weight: bolder;">
                    Crear Proyecto
                </span>
            </div>
            <form autocomplete="off" action="/project/add" method="post">
                <div class="card-content">
                    <div class='input-field'>
                        <label for='project-name'>Nombre de tu idea de proyecto</label>
                        <input placeholder="El nombre del Proyecto Aquí" id='project-name' name='name' type='text'
                            class="validate" />
                    </div>
                    <div class='input-field'>
                        <label for='project-description'>
                            Descripción del proyecto
                        </label>
                        <textarea id='prject-description' name='description' class="materialize-textarea" required></textarea>
                    </div>
                </div>
                <div class="card-action">
                    <button type="submit" class="blue darken-3 waves-effect waves-light btn">
                        <i class="material-icons left">note_add</i>Agregar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>